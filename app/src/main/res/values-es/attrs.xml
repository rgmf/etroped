<resources>
    <declare-styleable name="NumberPickerPreference">
        <attr name="minValue" format="integer"/>
        <attr name="maxValue" format="integer"/>
    </declare-styleable>
    <declare-styleable name="LocationStateButton">
        <attr name="tint" format="color" />
        <!-- See LocationState. Assume that for each state that is set to true, any state that is
        defined before that is true also -->
        <attr name="state_allowed" format="boolean"/>
        <attr name="state_enabled" format="boolean"/>
        <attr name="state_searching" format="boolean"/>
        <attr name="state_updating" format="boolean"/>
        <attr name="compass_mode" format="boolean"/>
    </declare-styleable>
</resources>